        <script>
            function sum() {
                alert("输入两个数字，我来求和");
                var usrIn0 = parseFloat(prompt("请输入第一个数字")), usrIn1 = parseFloat(prompt("请输入第二个数字"));
                alert(usrIn0 + usrIn1);
            }
        </script>
    </head>

    <body>
        <input type="button" value="点击以开始执行" onclick="sum()" style="border-radius: 12px; border: 0px; outline: none; float:left; position:relative; left:45%;"/>
