#! /usr/bin/env python

from math import pi
import re

print(">>圆周长计算[输入q退出]\n")

while True:
    r = input(">>请输入一个圆的半径:\n>>")
    value = re.compile(r'^[-+]?[0-9]+\.[0-9]+$')
    result = value.match(r)

    if r.isdigit() or result:
        print(">>该圆周长为", round((2 * float(r) * pi), 2))

    elif r == 'q':
        break

    else:
        print(">>请输入数字!")
