import urllib.request
import os

url = input(">>>输入需要爬取的网站地址:\n>>>")

print(">>>正在抓取页面...")
response = urllib.request.urlopen(url)

page = response.read()
page = page.decode('utf-8')

index = open('index.html', 'w', encoding='utf-8')
index.write(page)
index.close()
print(">>>已保存至index.html")

choice = input(">>>查看文件[\'y\' or \'n\']:")
if choice == 'y':
    os.system('chromium ~/Trings/pytring/index.html')

